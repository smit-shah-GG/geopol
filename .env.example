# Geopol v2.0 Environment Configuration
# Copy to .env and adjust for your environment.

# === Required API Keys ===
# Google Gemini API key for LLM forecasting
GEMINI_API_KEY=your_gemini_api_key_here

# === PostgreSQL ===
DATABASE_URL=postgresql+asyncpg://geopol:geopol_dev@localhost:5432/geopol
POSTGRES_PASSWORD=geopol_dev

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === GDELT SQLite (retained from v1.x) ===
GDELT_DB_PATH=data/events.db

# === Runtime ===
ENVIRONMENT=development  # development | production | testing

# === API ===
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# === Logging ===
LOG_LEVEL=INFO
LOG_JSON=false  # Set true in production for structured JSON logs

# === Optional v1.x Configuration ===
# These have sensible defaults, only override if needed

# GDELT API Settings
# GDELT_REQUEST_TIMEOUT=30  # seconds
# GDELT_MAX_RETRIES=5
# GDELT_BASE_DELAY=1.0  # seconds between retries

# Event Filtering
# GDELT100_THRESHOLD=100  # minimum mentions for high confidence events
# MIN_GOLDSTEIN_CONFLICT=-5.0  # minimum Goldstein score for conflicts

# Processing Limits
# MAX_EVENTS_PER_BATCH=10000
# STRATIFIED_SAMPLE_SIZE=5000
# DB_BATCH_SIZE=1000
